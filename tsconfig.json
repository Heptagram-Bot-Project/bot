{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./prod",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "types": ["bun-types"]
  },
  "exclude": ["./test"]
}
